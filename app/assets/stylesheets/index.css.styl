@import "_common"

body.index-index
  box-shadow inset 0 0 50px hsla(0, 0%, 0%, 0.1)
  header
    padding-top 3em
    h1
      margin 0
    nav
      display none
  #page
    padding-top 0
    margin-top -2px
    border-top solid 1px gray
  h2, h3
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-weight 300
    letter-spacing -1px
    border-bottom solid 1px gray
  .cover
    position relative
    float left
    img
      background-color lightgray
      width 100%
    .caption
      position absolute
      left 0
      bottom 0
      padding 0 20px
      color white
      width 60%
      background-color hsla(0, 0%, 0%, 0.2)
      p:first-child:first-line
        font-family sans-serif
        font-size x-large
        font-weight 300
        letter-spacing -1px
        line-height 125%
    &.landscape
      width 100%
      height 420px
      overflow hidden
      img
        height auto
        margin-top -5%
      & ~ section
        width 280px
    &.portrait
      width 50%
      float left
      & ~ section
        width 205px
  section
    float left
    padding-left 20px
    h2
      margin-top 1.5em
    ul
      list-style-type none
      padding-left 0
    h4
      font-family Times, Georgia, serif
      font-style italic
      font-size medium
      margin 1em 0 0.5em
      text-transform none
    p
      margin 0.5em 0
  .portfolio img
    width 100%
  .services
    li
      margin 0.5em 0
    b
      font-family Times, Georgia, serif
      font-style italic

body.index-portfolio
  header
    position relative
    background-color hsla(0, 0%, 100%, 0.3)
    padding 1ex 1em
    display -webkit-box
    display -moz-box
    display -ms-box
    display box
    box-align baseline
    h1, nav
      margin 0
      box-flex 1
    h1
      font-size medium
      text-align left
      .the
        position static
        font-size small
      a
        background url('logo-small.png') left center no-repeat
        min-width 155px
        min-height 15px
    nav
      font-size small
      text-align right
      li
        padding 0 0 0 1em
      .social
        position absolute
        right -80px
  footer
    display none
  #page
    &, a, h3
      color white
      text-shadow 0 0 2px hsla(0, 0%, 0%, 0.8)
  #portrait
    position fixed
    left 0
    bottom -4px
    z-index -1
    white-space nowrap
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-weight 300
    width 100%
    overflow-x scroll
    overflow-y hidden
    img
      opacity 0
      &.fade-in
        opacity 1
        transition opacity ease 100ms
    a
      position relative
      display inline-block
      .caption
        position absolute
        right 20px
        bottom 130px
        text-align right
        max-width 18em
        white-space normal
        background-color hsla(0, 0%, 0%, 0.2)
        padding 10px
        text-shadow none
  ul
    list-style-type none
    margin 0
    padding 0
    h3
      margin-bottom 0
  .albums
    position fixed
    bottom 0
    a.back
      display none
      font-size small
    .title
      margin-left 2em
    ul
      overflow auto
    :-webkit-scrollbar
      width 8px
      height 8px
    :-webkit-scrollbar-thumb:vertical
      background-color hsla(0, 0%, 0%, 0.2)
      border-radius 8px
  a.thumb
    img
      height 65px
      border solid 1px white
      border-radius 1px
    &.selected img
      border-color link
      transition border-color 200ms linear
  .set.closed
    position relative
    display inline-block
    height 130px
    margin 5px
    vertical-align top
    text-align center
    li
      position absolute
      top 0px
    li + li
      display none
    h4
      text-transform capitalize
      margin-top 85px
      width 79px
  .set.open
    height 90px
    width 900px
    white-space nowrap
    li
      position static
      display inline-block
      margin 5px
    h4
      display none

body.index-about
  #page img
    float left
    border solid 5px white
  p
    margin-left 330px
    text-align justify
    margin-right 35px

body.index-services
  #page
    position relative
    width 60%
    margin 0px auto
    h2
      font-size 1.25em
      .location
        text-transform none
      .price
        color black
    ul
      list-style-type none
      padding-left 20px
    li
      margin 0.25em 0px
      line-height 125%
    .price
      position absolute
      right 0px
      text-transform none
      display none
    .details ul
      font-size small
      padding-left 0px
      margin-left 0px
    h1, h2, h3, li
      border-bottom dotted 1px transparent
      transition border-bottom 100ms linear

body.index-error
  #page
    text-align center
    h1
      font-size xx-large
