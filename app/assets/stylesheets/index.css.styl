@import "_common"

body.index-index
  box-shadow inset 0 0 50px hsla(0, 0%, 0%, 0.1)
  header
    padding-top 3em
    h1
      margin 0
    nav
      display none
  #page
    padding-top 0
    margin-top -2px
    border-top solid 1px #979797
  h2, h3
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-weight 300
    letter-spacing -1px
    border-bottom solid 1px #979797
  .cover
    position relative
    z-index -1
    img
      background-color lightgray
    .caption
      position absolute
      left 0
      bottom 3px
      padding 0 20px
      color white
      width 60%
      background-color hsla(0, 0%, 0%, 0.2)
      p:first-line
        font-family sans-serif
        font-size x-large
        font-weight 300
        letter-spacing -1px
        line-height 125%
    &.landscape
      max-height 450px
      overflow hidden
      img
        width 100%
        height auto
        margin-top -5%
    &.portrait
      float left
      & + article
        padding-top 2em
  article
    display -webkit-box
  section
    box-flex 1
    width 33%
    padding-left 20px
    ul
      list-style-type none
      padding-left 0
    h4
      font-family Times, Georgia, serif
      font-style italic
      font-size medium
      margin-bottom 0.5em
      text-transform none
    p
      margin 0
  ul.instagram
    margin-left -10px
    li
      display inline
      position relative
      .caption
        display none
        position absolute
        bottom 10px
        left 5px
        padding 0 5px
        font-size small
        background-color hsla(0, 0%, 100%, 0.5)
        font-family Helvetica Neue, Helvetica, Arial, sans-serif
        width 80%
      &:hover .caption
        display block
    img
      width 45%
      margin 0 5px 5px 0

body.index-portfolio
  background url('/assets/bg.jpg')
  header
    position relative
    background-color hsla(0, 0%, 100%, 0.9)
    padding 1ex 1em
    display -webkit-box
    display -moz-box
    display -ms-box
    display box
    box-align baseline
    h1, nav
      margin 0
      box-flex 1
    h1
      font-size medium
      text-align left
      .the
        position static
        font-size small
      a
        background-image url('logo-small.png')
        min-height 15px
        min-width 130px
    nav
      font-size small
      text-align right
      li
        padding 0 0 0 2em
      .social
        position absolute
        right -80px
  footer
    display none
  #page
    &, a, h3
      color white
      text-shadow 0 0 2px hsla(0, 0%, 0%, 0.8)
  #portrait
    position fixed
    bottom -4px
    right 0
    z-index -1
    white-space nowrap
    transition left ease 500ms
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    font-weight 300
    &.removing
      transition none
    img
      opacity 0
      &.fade-in
        opacity 1
        transition opacity ease 100ms
    a
      position relative
      .caption
        position absolute
        right 20px
        bottom 120px
        text-align right
        max-width 15em
        white-space normal
        background-color hsla(0, 0%, 0%, 0.5)
        padding 10px
  ul
    list-style-type none
    margin 0px
    padding 0px
  .sets
    position fixed
    bottom 0
    a.back
      display none
      font-size small
    .title
      margin-left 2em
    ul
      overflow auto
    :-webkit-scrollbar
      width 8px
      height 8px
    :-webkit-scrollbar-thumb:vertical
      background-color hsla(0, 0%, 0%, 0.2)
      border-radius 8px
  a.thumb
    img
      height 75px
      border solid 1px white
      border-radius 1px
    &.selected img
      border-color link
      transition border-color 200ms linear
  .set.closed
    position relative
    display inline-block
    height 130px
    margin 5px
    vertical-align top
    text-align center
    li
      position absolute
      top 0px
    li + li
      display none
    h4
      text-transform capitalize
      margin-top 85px
      width 79px
  .set.open
    height 100px
    width 900px
    white-space nowrap
    li
      position static
      display inline-block
      margin 5px
    h4
      display none

body.index-about
  #page img
    float left
    border solid 5px white
  p
    margin-left 330px
    text-align justify
    margin-right 35px

body.index-services
  #page
    position relative
    width 60%
    margin 0px auto
    h2
      font-size 1.25em
      .location
        text-transform none
      .price
        color black
    ul
      list-style-type none
      padding-left 20px
    li
      margin 0.25em 0px
      line-height 125%
    .price
      position absolute
      right 0px
      text-transform none
      display none
    .details ul
      font-size small
      padding-left 0px
      margin-left 0px
    h1, h2, h3, li
      border-bottom dotted 1px transparent
      transition border-bottom 100ms linear

body.index-error
  #page
    text-align center
    h1
      font-size xx-large
