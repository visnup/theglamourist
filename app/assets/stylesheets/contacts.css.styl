@import "_common"

body.contacts-new, body.contacts-create
  #address
    p
      line-height 125%
  input[type=text], input[type=email], input[type=tel], textarea, p.demand
    width 50ex
  textarea
    height 12em
  p.demand
    margin-left 26ex

  form.formtastic
    ol
      list-style-type none
      padding 0px
      margin 0px
      li
        margin 1em 0px
    fieldset
      border none
      margin 0px
      padding 0px
    label
      display inline-block
      width 25ex
      padding-right 1ex
    abbr[title=required]
      font-size x-small
      color red
      margin-left 0.5ex
    li.text
      label
        margin-top 7px
      textarea
        vertical-align top
    li.date, li.time
      legend
        display none
      ol li
        display inline
        & + li label
          display none
    fieldset.buttons ol
      margin-left 26ex
    li.error
      label
        color link
      input, textarea
        box-shadow inset 0 0 3px red
      p.inline-errors
        color link
        margin 0px 0px 0px 26ex

body.contacts-show #page
  text-align center
