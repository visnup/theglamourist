@import '_common'

body.blog
  #page
    max-width 960px
  aside
    float right
    width 230px
    text-align left
  article
    margin-bottom 3em
    margin-right 300px
    text-align center
    > *
      text-align left
    &.photo img.photo
      width 100%
      display block
  time
    display block
    margin 0.5em 0
  h1
    text-transform none
    font-family headline
    font-weight normal
    font-size large
