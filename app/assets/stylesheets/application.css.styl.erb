//= require normalize
//= require_self
//= require_tree .

@import "_common"

html
  height 100%

body
  text-align center
  background-color #fff
  color #666
  box-shadow inset 0 0 50px hsla(0, 0%, 0%, 0.2)

body, input, textarea, select, option
  font-family Georgia, serif
  font-size medium

a
  color link
  text-decoration none
  outline none
  &:hover
    text-decoration underline
  img
    border none

h1, h2, h3, h4, h5, h6
  text-transform uppercase
  color black

p
  line-height 125%

label[for]
  cursor pointer

input[type=text], input[type=email], input[type=tel], textarea, select
  margin 0
  padding 2px
  border-radius 0
  border none
  border-bottom solid 1px hsla(0, 0%, 0%, 0.3)
  appearance none
  &:focus
    outline none
    border-bottom-color link
select
  padding-right 12px
  background url('<%= asset_data_uri 'down-arrow.png' %>') no-repeat 100% -5px
  &:focus
    background-position 100% -25px
@media (-webkit-min-device-pixel-ratio: 2)
  select
    background-image url('<%= asset_data_uri 'down-arrow@2x.png' %>')
    background-size 6px 40px

input[type=submit], button
  box-shadow 0 1px 3px hsla(0, 0%, 0%, 0.4), inset 0 1px 0 hsla(0, 0%, 100%, 0.4)
  border solid 1px hsla(0, 0%, 0%, 0.4)
  border-top-color hsla(0, 0%, 0%, 0.2)
  border-left-color hsla(0, 0%, 0%, 0.2)
  border-radius 0
  padding 0.25em 0.5em
  background-color link
  background-image linear-gradient(top, hsla(0, 100%, 100%, 0.5), hsla(0, 100%, 100%, 0.3))
  color white
  text-shadow 0px -1px 0px hsla(0, 0%, 0%, 0.2)
  font-size large
  cursor pointer
  &:hover
    background-color gray
    transition background-color 200ms ease
  &:active
    box-shadow inset 0 2px 8px hsla(0, 0%, 0%, 0.4)
    color hsla(0, 0%, 100%, 0.8)

header, #page, footer
  width 900px
  margin 0 auto
  text-align left

header, nav
  font-family Didot, Georgia, serif
  text-align center

header
  padding-top 3em
  h1
    margin 0
    font-size xx-large
    &, a
      color #888
    a
      position relative
      color transparent !important
      background url('logo@2x.png') no-repeat
      background-size 600px 85px
      display inline-block
      min-height 85px
      min-width 600px
    .the
      position absolute
      left 82px
      top 5px
      font-size large
      font-style italic
      font-weight normal
      text-transform lowercase

nav ul
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-weight 300
  list-style-type none
  padding 0px
  text-transform uppercase
  color link
  a
    color black
    transition color 200ms ease-out
    &:hover
      color link
  li
    display inline
    padding 0px 1em 0px
  .social
    a
      padding 0px
    img
      width 20px
      height 20px
      margin-bottom -2px
      &.yelp
        width 16px

#page
  padding 2em 0
  .pullout
    float right
    width pullout-width - 20px
    clearfix()
  clearfix()

footer
  font-size small
  padding 1em 10px
  .logo
    word-spacing -0.1em
  .the
    font-style italic
  b
    font-weight normal
    color link
  ul
    float right
    margin 0
    li
      display inline-block
      margin-left 1em
