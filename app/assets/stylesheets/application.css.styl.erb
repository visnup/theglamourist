//= require_tree .

@import "_common"

body
  text-align center
  background-color #fff
  color #666

body, input, textarea, select, option
  font-family Georgia, serif
  font-size medium

a
  color link
  text-decoration none
  outline none
  img
    border none

h1, h2, h3, h4, h5, h6
  text-transform uppercase
  color link

p
  line-height 160%

label[for]
  cursor pointer

input[type=text], input[type=email], input[type=tel], textarea, select
  margin 0
  border none
  border-bottom solid 1px hsla(0, 0%, 0%, 0.3)
  &:focus
    outline none
    border-bottom-color link
select
  appearance none
  border-radius 0
  padding 0 20px 0 1ex
  background url('<%= asset_data_uri 'down-arrow.png' %>') no-repeat 100% 0
  &:focus
    background-position 100% -18px

input[type=submit], button
  box-shadow 0 1px 3px hsla(0, 0%, 0%, 0.4), inset 0 1px 0 hsla(0, 0%, 100%, 0.4)
  border solid 1px hsla(0, 0%, 0%, 0.4)
  border-top-color hsla(0, 0%, 0%, 0.2)
  border-left-color hsla(0, 0%, 0%, 0.2)
  padding 0.25em 0.5em
  background-color link
  background-image linear-gradient(top, hsla(0, 100%, 100%, 0.5), hsla(0, 100%, 100%, 0.3))
  color white
  text-shadow 0px -1px 0px hsla(0, 0%, 0%, 0.2)
  font-size large
  cursor pointer
  &:hover
    box-shadow 0 1px 5px link, inset 0 1px 0 hsla(0, 0%, 100%, 0.4)
    transition box-shadow 100ms ease-in
  &:active
    box-shadow inset 0 2px 8px hsla(0, 0%, 0%, 0.4)
    color hsla(0, 0%, 100%, 0.8)

header, #page, footer
  width 900px
  margin 0 auto
  text-align left

header, nav
  font-family Didot, Georgia, serif
  text-align center

header
  h1
    font-size xx-large
    &, a
      color #888
    .tagline
      word-spacing 0px
      font-size small
      margin-bottom 0.5em
      margin-left 130px
    a
      position relative
    .the
      position absolute
      left 82px
      top 5px
      font-size large
      font-style italic
      font-weight normal
      text-transform lowercase
    b
      color link

nav ul
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-weight 300
  list-style-type none
  padding 0px
  text-transform uppercase
  color link
  a
    color black
    transition color 200ms ease-out
    &:hover
      color link
  li
    display inline
    padding 0px 1em 0px
  .social
    a
      padding 0px
    img
      width 20px
      height 20px
      margin-bottom -2px
      &.yelp
        width 16px

#page
  padding 2em 10px
  .pullout
    float right
    width pullout-width - 20px
    clearfix()
  clearfix()

footer
  font-size small
  padding 1em 10px
  b
    font-weight normal
    color link
  .where
    float right
