//= require normalize
//= require fontello-embedded
//= require_self
//= require_tree .

@import "_common"

html
  height 100%

body
  text-align center
  background-color #fff
  color #666
  min-height 100%

body, input, textarea, select, option
  font-family body-font
  font-size medium

a
  color link
  text-decoration none
  outline none
  &:hover
    text-decoration underline
  img
    border none

h1, h2, h3, h4, h5, h6
  text-transform uppercase
  color black

h2
  font-family headline-sans-serif
  font-weight 300
  border-bottom solid 1px gray
  &, a
    color accent

h3, h4, h5, h6
  font-family headline-sans-serif-alt
  font-weight normal

p, ul
  line-height 140%
  margin 0.5em 0

label[for]
  cursor pointer

input[type=text], input[type=email], input[type=tel], textarea, select
  margin 0
  padding 2px
  border-radius 0
  border none
  border-bottom solid 1px hsla(0, 0%, 0%, 0.2)
  appearance none
  &:focus
    outline none
    border-bottom-color link
select
  padding-right 12px
  background url('<%= asset_data_uri 'down-arrow.png' %>') no-repeat 100% -5px
  &:focus
    background-position 100% -25px
@media (-webkit-min-device-pixel-ratio: 2)
  select
    background-image url('<%= asset_data_uri 'down-arrow@2x.png' %>')
    background-size 6px 40px

input[type=submit], button
  box-shadow 0 1px 3px hsla(0, 0%, 0%, 0.4), inset 0 1px 0 hsla(0, 0%, 100%, 0.4)
  border solid 1px hsla(0, 0%, 0%, 0.4)
  border-top-color hsla(0, 0%, 0%, 0.2)
  border-left-color hsla(0, 0%, 0%, 0.2)
  border-radius 0
  padding 0.25em 0.5em
  background-color link
  background-image linear-gradient(top, hsla(0, 100%, 100%, 0.5), hsla(0, 100%, 100%, 0.3))
  color white
  text-shadow 0px -1px 0px hsla(0, 0%, 0%, 0.2)
  font-size large
  cursor pointer
  &:hover
    background-color gray
    transition background-color 200ms ease
  &:active
    box-shadow inset 0 2px 8px hsla(0, 0%, 0%, .4)
    color hsla(0, 0%, 100%, .8)

header, #page, footer
  width 900px
  margin 0 auto
  text-align left

header, header nav
  font-family headline
  text-align center

header
  nav + h1
    margin 1.5em 0 0
    font-size xx-large
    &, a
      color #888
    a
      position relative
      color transparent !important
      background url('<%= asset_data_uri 'logo@2x.png' %>') no-repeat
      background-size 600px 85px
      display inline-block
      min-height 85px
      min-width 600px
    .the
      position absolute
      left 82px
      top 5px
      font-size large
      font-style italic
      font-weight normal
      text-transform lowercase

body > header nav
  position fixed
  width 100%
  left 0
  top 0
  z-index 1
  background-color hsla(0, 0%, 0%, .9)
  padding 15px 0
  > ul
    text-align left
    width 900px
    font-family body-font
    font-size small
    list-style-type none
    padding 0
    margin 0 auto
    text-transform uppercase
    color accent
    i
      text-transform lowercase
      font-family headline
    a
      color white
    > li
      display inline
      padding 0 2em
      position relative
      word-spacing -.25ex
      &:first-child
        padding-left 0
      // sub-menu
      &:hover ul
        opacity 1
        top 100%
        visibility visible
      ul
        z-index 1
        opacity 0
        visibility hidden
        position absolute
        left -1px
        top 0%
        margin 0
        padding 1em 0
        background-color hsla(0, 0%, 0%, .9)
        width auto
        transition top .2s, opacity .2s
        li
          padding 0 2em
          display list-item
          text-align left
          white-space nowrap
    li.social
      float right
      padding-right 0
      a
        margin 0 .5ex

#page
  padding 2em 0
  aside
    float right
    margin-left 20px
    width 240px
  section
    ul
      list-style-type none
      padding-left 0
    h4
      font-family headline-serif
      font-size medium + 1
      font-style italic
      margin 1.5em 0 0
      text-transform none
  section.portfolio img
    width 100%
    height auto
  section.contact .social
    text-align center
    margin-top 1em
    a
      font-size x-large - 3

body > footer
  clear both
  font-size small
  padding 1em 10px
  .logo
    word-spacing -.2em
    font-family headline
  .the
    font-style italic
  b
    font-weight normal
    color link
  ul
    float right
    margin 0
    li
      display inline-block
      margin-left 1em
