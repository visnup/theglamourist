- content_for :title, 'contact'

#address.pullout
  %h2 contact
  %p
    jane kim
    %br
    != mail_to 'jane@theglamourist.com', nil, :encode => 'javascript'
  %p.phone
    (415) 860-5872
  %p.address
    1325 Indiana St.  Ste. 301
    %br
    San Francisco, CA  94107
  available for travel worldwide

%h2 for inquiries

= form_for @contact do |f|
  = f.error_messages

  %p
    = f.label :name, 'name'
    %br
    = f.text_field :name
  %p
    = f.label :email, 'email'
    %br
    = f.text_field :email
  %p
    = f.label :message, 'message'
    %br
    = f.text_area :message, :placeholder => 'please describe what you&rsquo;re looking for'.html_safe
  %p
    = f.submit 'send'
