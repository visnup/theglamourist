%h1 for inquiries

- form_for @contact do |f|
  = f.error_messages

  %p
    = f.label :name, 'name'
    %br
    = f.text_field :name
  %p
    = f.label :email, 'email'
    %br
    = f.text_field :email
  %p
    = f.label :message, 'message'
    %br
    = f.text_area :message, :placeholder => 'please describe what you&rsquo;re looking for'
  %p
    = f.submit 'send'
