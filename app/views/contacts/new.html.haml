- content_for :title, 'contact'

#address.pullout
  %h2 contact
  %p
    jane kim
    %br
    != mail_to 'jane@theglamourist.com', nil, :encode => 'javascript'
  %p.phone
    (415) 860-5872
  %p.address
    1325 Indiana St.  Ste. 301
    %br
    San Francisco, CA  94107
  available for travel worldwide

%h2 for inquiries

= semantic_form_for @contact do |f|
  = f.inputs :name, :email, :phone_number
  = f.inputs do
    = f.input :service_type, :as => :select, :collection => %w/ Wedding Commercial Fashion Lessons Boudoir Other /
    = f.input :event_at, :labels => { :year => I18n.t('activerecord.attributes.contact.event_at') }, :start_year => Date.today.year, :include_blank => false, :required => true
    = f.input :event_venue
    = f.input :ready_time, :labels => { :hour => I18n.t('activerecord.attributes.contact.ready_time') }, :meridian => true, :minute_step => 15
    = f.input :party_size
  = f.inputs :message
  %p.demand
    We try to respond promptly, but due to the high volume of inquiries, please
    allow up to 72 hours for a reply.
  = f.buttons do
    = f.commit_button 'Send'
