- content_for :title, 'portfolio'

ul.albums
  h3
    a.back( href='#' ) &laquo; Back
    span.title Choose a set
  - @albums.each do |set|
    li.set.closed
      h4: a( href="##{set['id']}-#{set['cover_photo']['id']}" )= set['name']
      ul
        - set['photos'].each_with_index do |photo, i|
          - image = photo['images'][-1]
          li( style="z-index: -#{i};" )
            a.thumb( id="t#{set['id']}-#{photo['id']}" href=photo['link'] )
              img( src=photo['picture'] title=photo['name'] width=65.0/image['height']*image['width'] )

