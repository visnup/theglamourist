!!! 5
%html
  %head
    %title
      = yield(:title) + ' |'  if content_for?(:title)
      the glamourist - jane kim
    = csrf_meta_tag
    = auto_discovery_link_tag :atom, posts_url(:format => 'atom')
    = stylesheet_link_tag 'application', :media => 'all'
    <!--[if IE]>
    = stylesheet_link_tag 'ie', :media => 'all'
    <![endif]-->
    - if Rails.env.production?
      = javascript_include_tag 'http://code.jquery.com/jquery.min.js'
    - else
      = javascript_include_tag 'jquery-1.4.js'
    = javascript_include_tag 'rails', 'application', :cache => true
  %body{:class => "#{params[:controller]} #{params[:controller]}-#{params[:action]}"}
    #content
      %ul#nav
        %h1
          = link_to root_path do
            the
            %strong glamourist
        %li= link_to 'home', root_path, :class => 'home'
        %li= link_to 'portfolio', portfolio_path, :class => 'portfolio'
        %li= link_to 'services', services_path, :class => 'services'
        %li= link_to 'contact', new_contact_path, :class => 'contact'
        %li= link_to 'about', about_path, :class => 'about'
        %li= link_to 'blog', posts_path, :class => 'blog'
        .clear
      #page
        = yield
      #footer
        &copy; #{Time.now.year} the glamourist
        &mdash; designed by #{link_to 'fortnight labs', 'http://fortnightlabs.com'}
        &mdash; code on #{link_to 'github', 'http://github.com/visnup/theglamourist'}
    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-17693950-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
